# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# Basic Configuration
aws_region    = "us-east-1"
project_name  = "catalog-server"
environment   = "production"
instance_type = "t3.micro"

# Change this to a unique bucket name (must be globally unique)
terraform_state_bucket = "catalog-server-terraform-state-your-unique-suffix"

# Security Configuration
key_pair_name = "catalog-server-key"
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this in production

# Database Configuration  
db_username = "catalog_user"
db_password = "change_this_secure_password_123"  # Use a strong password
db_name     = "catalog"